<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mContext"
            type="com.example.huabei_competition.ui.RegisterActivity" />
    </data>


    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/check"
        android:orientation="vertical">

        <include
            android:id="@+id/loading"
            layout="@layout/loading"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:text="@string/register"
            android:textColor="#FBF2EE"
            android:textSize="35sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:id="@+id/userName"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="?attr/selectableItemBackground"
            app:cardBackgroundColor="#FBF2EE"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:src="@drawable/user2" />

                <EditText
                    android:id="@+id/et_userName"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:autofillHints=""
                    android:drawablePadding="5dp"
                    android:hint="@string/userName"
                    android:inputType="text"
                    android:textColor="#867676"
                    android:textColorHint="#867676"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/password"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="?attr/selectableItemBackground"
            app:cardBackgroundColor="#FBF2EE"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:paddingStart="15dp"
                    android:src="@drawable/password" />


                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:autofillHints=""
                    android:drawablePadding="5dp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="#867676"
                    android:textColorHint="#867676"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape"
                android:onClick="@{() -> mContext.onCancel()}"
                android:text="取消"
                android:textColor="#756868" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/shape"
                android:onClick="@{() -> mContext.onConfirm()}"
                android:text="确认"
                android:textColor="#756868" />
        </LinearLayout>


    </LinearLayout>


</layout>