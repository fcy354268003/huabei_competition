<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.91" />

        <CheckBox
            android:id="@+id/aa"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/draw_add"
            android:button="@null"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/bnv_guide"
            app:layout_constraintEnd_toEndOf="@+id/bnv_guide"
            app:layout_constraintStart_toStartOf="@+id/bnv_guide"
            app:layout_constraintTop_toBottomOf="@+id/vp_main" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnv_guide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="1dp"
            android:background="#fbf2ed"
            app:itemIconSize="30dp"
            app:itemIconTint="@drawable/bottom_item_tint"
            app:itemTextColor="@drawable/bottom_item_tint"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline20"
            app:menu="@menu/main_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>